@model PAW3.Web.Models.ViewModels.SupplierPageViewModel

@{
    ViewData["Title"] = "Suppliers";
}

<div class="content-card">
    <div class="page-header">
        <h1><i class="fas fa-truck text-primary-custom me-2"></i>Suppliers</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
        </div>
    }

    @if (Model.Suppliers != null && Model.Suppliers.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Suppliers.First().SupplierId)</th>
                        <th>@Html.DisplayNameFor(m => m.Suppliers.First().SupplierName)</th>
                        <th>@Html.DisplayNameFor(m => m.Suppliers.First().ContactName)</th>
                        <th>@Html.DisplayNameFor(m => m.Suppliers.First().Phone)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Suppliers)
                    {
                        <tr>
                            <td><strong>@item.SupplierId</strong></td>
                            <td>@item.SupplierName</td>
                            <td>@item.ContactName</td>
                            <td>@item.Phone</td>
                            <td class="text-end">
                                <div class="action-buttons">
                                    <a asp-controller="Supplier" asp-action="Details" asp-route-id="@item.SupplierId" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                                    <a asp-controller="Supplier" asp-action="Edit" asp-route-id="@item.SupplierId" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                    <a asp-controller="Supplier" asp-action="Delete" asp-route-id="@item.SupplierId" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @await Html.PartialAsync("~/Views/Shared/Partial/Summary.cshtml", Model.Summaries)
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon"><i class="fas fa-truck"></i></div>
            <h3>No Suppliers Found</h3>
            <p>Get started by creating your first supplier.</p>
            <a asp-action="Create" class="btn btn-primary mt-3"><i class="fas fa-plus me-2"></i>Create Supplier</a>
        </div>
    }
</div>