@model PAW3.Web.Models.ViewModels.UserPageViewModel

@{
    ViewData["Title"] = "Users";
}

<div class="content-card">
    <div class="page-header">
        <h1><i class="fas fa-users text-primary-custom me-2"></i>Users</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
        </div>
    }

    @if (Model.Users != null && Model.Users.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Users.First().UserId)</th>
                        <th>@Html.DisplayNameFor(m => m.Users.First().Username)</th>
                        <th>@Html.DisplayNameFor(m => m.Users.First().Email)</th>
                        <th>@Html.DisplayNameFor(m => m.Users.First().IsActive)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td><strong>@item.UserId</strong></td>
                        <td>@item.Username</td>
                        <td>@item.Email</td>
                        <td>
                            @if (item.IsActive == true)
                            { <span class="badge bg-success">Active</span> }
                            else
                            { <span class="badge bg-secondary">Inactive</span> }
                        </td>
                        <td class="text-end">
                            <div class="action-buttons">
                                <a asp-controller="User" asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                                <a asp-controller="User" asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                <a asp-controller="User" asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        @await Html.PartialAsync("~/Views/Shared/Partial/Summary.cshtml", Model.Summaries)
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon"><i class="fas fa-users"></i></div>
            <h3>No Users Found</h3>
            <p>Get started by creating your first user.</p>
            <a asp-action="Create" class="btn btn-primary mt-3"><i class="fas fa-plus me-2"></i>Create User</a>
        </div>
    }
</div>