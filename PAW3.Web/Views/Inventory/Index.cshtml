@model PAW3.Web.Models.ViewModels.InventoryPageViewModel

@{
    ViewData["Title"] = "Inventory";
}

<div class="content-card">
    <div class="page-header">
        <h1><i class="fas fa-warehouse text-primary-custom me-2"></i>Inventory</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
        </div>
    }

    @if (Model.Inventories != null && Model.Inventories.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Inventories.First().InventoryId)</th>
                        <th>@Html.DisplayNameFor(m => m.Inventories.First().UnitsInStock)</th>
                        <th>@Html.DisplayNameFor(m => m.Inventories.First().UnitPrice)</th>
                        <th>@Html.DisplayNameFor(m => m.Inventories.First().ProductId)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Inventories)
                    {
                        <tr>
                            <td><strong>@item.InventoryId</strong></td>
                            <td>@item.UnitsInStock</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.ProductId</td>
                            <td class="text-end">
                                <div class="action-buttons">
                                    <a asp-controller="Inventory" asp-action="Details" asp-route-id="@item.InventoryId" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                                    <a asp-controller="Inventory" asp-action="Edit" asp-route-id="@item.InventoryId" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                    <a asp-controller="Inventory" asp-action="Delete" asp-route-id="@item.InventoryId" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @await Html.PartialAsync("~/Views/Shared/Partial/Summary.cshtml", Model.Summaries)
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon"><i class="fas fa-warehouse"></i></div>
            <h3>No Inventory Items Found</h3>
            <p>Get started by creating your first inventory item.</p>
            <a asp-action="Create" class="btn btn-primary mt-3"><i class="fas fa-plus me-2"></i>Create Inventory Item</a>
        </div>
    }
</div>