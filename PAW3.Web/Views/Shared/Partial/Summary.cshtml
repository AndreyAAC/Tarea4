@model List<PAW3.Web.Models.ViewModels.SummaryViewModel>;

@{
    ViewData["Title"] = "Summary";
}

<div class="summary-card">
    <div class="summary-header">
        <h2><i class="fas fa-chart-bar text-primary-custom me-2"></i>Summary</h2>
    </div>
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th class="text-end">Value</th>
                        <th class="text-end">Count</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <td>@s.Id</td>
                            <td>@s.Name</td>
                            <td class="text-end">@s.Value</td>
                            <td class="text-end">@s.Count</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle me-2"></i>No summary data available.
        </div>
    }
</div>