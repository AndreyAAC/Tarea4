@model PAW3.Web.Models.ViewModels.UserActionPageViewModel

@{
    ViewData["Title"] = "User Actions";
}

<div class="content-card">
    <div class="page-header">
        <h1><i class="fas fa-user-cog text-primary-custom me-2"></i>User Actions</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
        </div>
    }

    @if (Model.UserActions != null && Model.UserActions.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.UserActions.First().Id)</th>
                        <th>@Html.DisplayNameFor(m => m.UserActions.First().Name)</th>
                        <th>@Html.DisplayNameFor(m => m.UserActions.First().Description)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.UserActions)
                {
                    <tr>
                        <td><strong>@item.Id</strong></td>
                        <td>@item.Name</td>
                        <td>@(item.Description?.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                        <td class="text-end">
                            <div class="action-buttons">
                                <a asp-controller="UserAction" asp-action="Details" asp-route-id="@((int?)item.Id)" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                                <a asp-controller="UserAction" asp-action="Edit" asp-route-id="@((int?)item.Id)" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                <a asp-controller="UserAction" asp-action="Delete" asp-route-id="@((int?)item.Id)" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>

        @await Html.PartialAsync("~/Views/Shared/Partial/Summary.cshtml", Model.Summaries)
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon"><i class="fas fa-user-cog"></i></div>
            <h3>No User Actions Found</h3>
            <p>Get started by creating your first user action.</p>
            <a asp-action="Create" class="btn btn-primary mt-3"><i class="fas fa-plus me-2"></i>Create User Action</a>
        </div>
    }
</div>