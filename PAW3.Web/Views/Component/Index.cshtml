@model PAW3.Web.Models.ViewModels.ComponentPageViewModel

@{
    ViewData["Title"] = "Components";
}

<div class="content-card">
    <div class="page-header">
        <h1><i class="fas fa-puzzle-piece text-primary-custom me-2"></i>Components</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
        </div>
    }

    @if (Model.Components != null && Model.Components.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Components.First().Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Components.First().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Components.First().Content)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Components)
                    {
                        <tr>
                            <td><strong>@item.Id</strong></td>
                            <td>@item.Name</td>
                            <td>@(item.Content?.Length > 50 ? item.Content.Substring(0, 50) + "..." : item.Content)</td>
                            <td class="text-end">
                                <div class="action-buttons">
                                    <a asp-controller="Component" asp-action="Details" asp-route-id="@((int)item.Id)" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-controller="Component" asp-action="Edit" asp-route-id="@((int)item.Id)" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-controller="Component" asp-action="Delete" asp-route-id="@((int)item.Id)" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @await Html.PartialAsync("~/Views/Shared/Partial/Summary.cshtml", Model.Summaries)
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-puzzle-piece"></i>
            </div>
            <h3>No Components Found</h3>
            <p>Get started by creating your first component.</p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="fas fa-plus me-2"></i>Create Component
            </a>
        </div>
    }
</div>
