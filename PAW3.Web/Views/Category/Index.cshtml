@model PAW3.Web.Models.ViewModels.CategoryPageViewModel

@{
    ViewData["Title"] = "Categories";
}

<div class="content-card">
    <div class="page-header">
        <h1><i class="fas fa-tags text-primary-custom me-2"></i>Categories</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
        </div>
    }

    @if (Model.Categories != null && Model.Categories.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Categories.First().CategoryId)</th>
                        <th>@Html.DisplayNameFor(m => m.Categories.First().CategoryName)</th>
                        <th>@Html.DisplayNameFor(m => m.Categories.First().Description)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td><strong>@item.CategoryId</strong></td>
                            <td>@item.CategoryName</td>
                            <td>@(item.Description?.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                            <td class="text-end">
                                <div class="action-buttons">
                                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @await Html.PartialAsync("~/Views/Shared/Partial/Summary.cshtml", Model.Summaries)
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon"><i class="fas fa-tags"></i></div>
            <h3>No Categories Found</h3>
            <p>Get started by creating your first category.</p>
            <a asp-action="Create" class="btn btn-primary mt-3"><i class="fas fa-plus me-2"></i>Create Category</a>
        </div>
    }
</div>