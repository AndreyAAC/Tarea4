@model PAW3.Web.Models.ViewModels.NotificationPageViewModel

@{
    ViewData["Title"] = "Notifications";
}

<div class="content-card">
    <div class="page-header">
        <h1><i class="fas fa-bell text-primary-custom me-2"></i>Notifications</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
        </div>
    }

    @if (Model.Notifications != null && Model.Notifications.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Notifications.First().Id)</th>
                        <th>@Html.DisplayNameFor(m => m.Notifications.First().UserId)</th>
                        <th>@Html.DisplayNameFor(m => m.Notifications.First().Message)</th>
                        <th>@Html.DisplayNameFor(m => m.Notifications.First().IsRead)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Notifications)
                    {
                        <tr>
                            <td><strong>@item.Id</strong></td>
                            <td>@item.UserId</td>
                            <td>@(item.Message?.Length > 50 ? item.Message.Substring(0, 50) + "..." : item.Message)</td>
                            <td>
                                @if (item.IsRead == true)
                                {
                                    <span class="badge bg-success">Read</span>
                                }
                                else
                                {

                                    <span class="badge bg-warning text-dark">Unread</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="action-buttons">
                                    <a asp-controller="Notification" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                                    <a asp-controller="Notification" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                    <a asp-controller="Notification" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @await Html.PartialAsync("~/Views/Shared/Partial/Summary.cshtml", Model.Summaries)
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon"><i class="fas fa-bell"></i></div>
            <h3>No Notifications Found</h3>
            <p>Get started by creating your first notification.</p>
            <a asp-action="Create" class="btn btn-primary mt-3"><i class="fas fa-plus me-2"></i>Create Notification</a>
        </div>
    }
</div>